{
    "name": "helhum/ext-scaffold",
    "type": "typo3-cms-extension",
    "description": "Description for ext",
    "keywords": [
        "TYPO3",
        "extension",
        "scaffold"
    ],
    "homepage": "http://helhum.io",
    "support": {
        "issues": "https://github.com/helhum/ext_scaffold/issues"
    },
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "info@helhum.io",
            "role": "Developer",
            "homepage": "http://helhum.io"
        }
    ],
    "license": "GPL-2.0+",
    "require": {
        "typo3/cms-core": "^6.2.14 || ^7.6 || ^8.0"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "^1.2",
        "mikey179/vfsStream": "^1.4",
        "phpunit/phpunit": "^4.7 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Helhum\\ExtScaffold\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helhum\\ExtScaffold\\Tests\\": "Tests",
            "TYPO3\\CMS\\Core\\Tests\\": [
                ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
                ".Build/vendor/typo3/cms/components/testing_framework/compat/core/"
            ],
            "TYPO3\\CMS\\Fluid\\Tests\\": [
                ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/",
                ".Build/vendor/typo3/cms/components/testing_framework/compat/fluid/"
            ],
            "TYPO3\\CMS\\Components\\TestingFramework\\Core\\": ".Build/vendor/typo3/cms/components/testing_framework/core/",
            "TYPO3\\CMS\\Components\\TestingFramework\\Fluid\\": ".Build/vendor/typo3/cms/components/testing_framework/fluid/"
           }
    },
    "replace": {
        "ext_scaffold": "self.version",
        "typo3-ter/ext-scaffold": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "preferred-install": {
            "typo3/cms": "source"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/ext_scaffold ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/ext_scaffold",
            "if [ ! -d .Build/vendor/typo3/cms/components ]; then mkdir -p .Build/vendor/typo3/cms/components/testing_framework/core && ln -snvf ../../../typo3/sysext/core/Build .Build/vendor/typo3/cms/components/testing_framework/core/Build; fi"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
